{
  "name": "opencode-manager",
  "version": "0.8.27",
  "private": false,
  "type": "module",
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "predev": "bash scripts/setup-dev.sh",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "bun --watch backend/src/index.ts",
    "dev:frontend": "bun --filter frontend dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "bun --filter backend build",
    "build:frontend": "bun --filter frontend build",
    "typecheck": "bun run typecheck:frontend && bun run typecheck:backend",
    "typecheck:frontend": "bun --filter frontend typecheck",
    "typecheck:backend": "bun --filter backend typecheck",
    "test": "bun run test:backend",
    "test:backend": "bun --filter backend test",
    "lint": "bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "bun --filter frontend lint",
    "lint:backend": "bun --filter backend lint",
    "lint:fix": "bun run lint:frontend -- --fix && bun run lint:backend -- --fix",
    "generate:openapi": "bun scripts/generate-openapi.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "setup:docker": "bash scripts/setup-docker.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {}
}
